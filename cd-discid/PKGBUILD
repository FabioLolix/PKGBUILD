pkgname=cd-discid
pkgver=1.4
pkgrel=4
pkgdesc="A backend utility to get CDDB discid information from a CD-ROM disc"
arch=(x86_64)
url="https://github.com/taem/cd-discid"
license=(GPL-2.0-or-later)
depends=(glibc)
source=("cd-discid-${pkgver}.tar.gz::https://github.com/taem/cd-discid/archive/refs/tags/${pkgver}.tar.gz")
sha512sums=('04f3962f7f3f0780c41b2f361397b54efe9c9748643d83311d63f7476d28f9bd295b96dd81f06df2c1e7d6ef095c6732107101c0fb7375fa521f4db67a3984da')

build() {
  cd "cd-discid-${pkgver}"
  make
}

package() {
  cd "cd-discid-${pkgver}"
  make DESTDIR="${pkgdir}" PREFIX=/usr install
}
